<h2>Review of <%= @hole.hole_number %></h2>
<%= form_for [@course, @hole, @tip], :class => 'form-horizontal' do |form| %>
<div class='form-group'>
<%= form.label :body, 'Tip', class:"control-label col-md-2" %>
<%= form.text_area :body, :class => 'form-control' %>
</div>
<div class='form-group'>
<%= form.submit 'submit', :id => 'form-button', :class => 'btn btn--full' %>
</div>
<% end %>
